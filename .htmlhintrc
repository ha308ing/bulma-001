{
  /* https://htmlhint.com/docs/user-guide/list-rules */

  /* Doctype and Head */
  /* Doctype must be declared first. */
  "doctype-first": true,
  /* Invalid doctype. */
  "doctype-html5": true,
  /* The HTML lang attribute is required. */
  "html-lang-require": true,
  /* The <script> tag cannot be used in a tag. */
  "head-script-disabled": false,
  /* <style> tags cannot be used. */
  "style-disabled": false,
  /* <script> tags cannot be used. */
  "script-disabled": false,
  /* <title> must be present in <head> tag. */
  "title-require": true,

  /* Attributes */
  /* All attribute names must be in lowercase. */
  "attr-lowercase": false,
  /* Elements cannot have duplicate attributes. */
  "attr-no-duplication": true,
  /* No spaces between attribute names and values. */
  "attr-no-unnecessary-whitespace": true,
  /* Attribute values cannot contain unsafe chars. */
  "attr-unsafe-chars": false,
  /* Attribute values must be in double quotes. */
  "attr-value-double-quotes": true,
  /* Attribute values must be in single quotes. */
  "attr-value-single-quotes": false,
  /* All attributes must have values. */
  "attr-value-not-empty": false,
  /* No leading or trailing spaces in attribute values. */
  "attr-sorted": false,
  /* No leading or trailing spaces in attribute values. */
  "attr-whitespace": true,
  /* The alt attribute of an element must be present and alt attribute of area[href] and input[type=image] must have a value. */
  "alt-require": true,
  /* All [ input ] tags must have a corresponding [ label ] tag. */
  "input-requires-label": false,

  /* Tags */
  /* Allowing specify rules for any tag and validate that */
  "tags-check": false,
  /* Tag must be paired. */
  "tag-pair": false,
  /* Empty tags must be self closed. */
  "tag-self-close": false,
  /* All html element names must be in lowercase. */
  "tagname-lowercase": false,
  /* Tag names can only contain letters, numbers, "-", ":" or "_". */
  "tagname-specialchars": true,
  /* The empty tag should not be closed by self. */
  "empty-tag-not-self-closed": true,
  /* The src attribute of an img(script,link) must have a value. */
  "src-not-empty": false,
  /* An href attribute must be either absolute or relative. */
  "href-abs-or-rel": false,

  /* Id */
  /* The id and class attributes cannot use the ad keyword, it will be blocked by adblock software. */
  "id-class-ad-disabled": true,
  /* The id and class attribute values must meet the specified rules. */
  "id-class-value": false,
  /* The value of id attributes must be unique. */
  "id-unique": true,

  /* Inline */
  /* Inline script cannot be use. */
  "inline-script-disabled": false,
  /* Inline style cannot be use. */
  "inline-style-disabled": false,

  /* Formatting */
  /* Do not mix tabs and spaces for indentation. */
  "space-tab-mixed-disabled": "space",
  /* Special characters must be escaped. */
  "spec-char-escape": true
}
